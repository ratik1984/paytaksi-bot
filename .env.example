# Telegram bot token from @BotFather
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Comma-separated Telegram user IDs who are admins
ADMIN_IDS=123456789

# Public base URL where your server is reachable (https://yourdomain.com)
PUBLIC_BASE_URL=https://your-domain.com

# Port for server (Render/Railway set PORT automatically)
PORT=3000

# Optional: enable webhook by setting a secret (recommended for hosting platforms)
WEBHOOK_SECRET=change_me

# DB file path (JSON). Default: ./data.json
DB_FILE=./data.json
