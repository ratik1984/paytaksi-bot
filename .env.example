# Telegram Bot token (BotFather)
BOT_TOKEN=123456:ABCDEF

# Comma-separated admin Telegram user IDs
ADMIN_IDS=123456789,987654321

# Optional: base URL for your web app / landing (used in buttons)
APP_URL=https://yourdomain.com

# Optional: default city center to suggest nearby drivers (lat,lon)
DEFAULT_CITY_LAT=40.4093
DEFAULT_CITY_LON=49.8671

# Offer timeout in seconds (driver must accept within this time)
OFFER_TIMEOUT_SEC=25

# Optional geocoding via OpenStreetMap Nominatim (no key). Set 0 to disable.
ENABLE_GEOCODE=1

# SQLite DB file path
DB_PATH=./data.sqlite
